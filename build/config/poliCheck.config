<?xml version="1.0" encoding="utf-8"?>
<PoliCheck>
  <IncludedFilePatterns>
    <!-- add file patterns to include policheck -->
    <Pattern>resources.en-US.resx</Pattern>
    <Pattern>cloudforfsi.manifest.en.json</Pattern>
    <Pattern>resource.en-US.json</Pattern>
    <Pattern>*.1033.resx</Pattern>
    <Pattern>*.1033.json</Pattern>
    <Pattern>1033\*</Pattern>
  </IncludedFilePatterns>
  <ExcludedFilePatterns>
    <!-- add file patterns to bypass in policheck -->
    <Pattern>localizedString.*.resx</Pattern>
    <Pattern>PackageResources.*.resx</Pattern>
    <Pattern>resources.*.resx</Pattern>
    <Pattern>resource.*.json</Pattern>
    <Pattern>cloudforfsi.manifest.*.json</Pattern>
    <Pattern>terms*.htm</Pattern>
    <Pattern>data.xml</Pattern>
    <Pattern>data.html</Pattern>
    <Pattern>data.json</Pattern>
    <Pattern>*.*.json</Pattern>
    <!-- Excluding RibbonDiff.xml from attibute value map due to false positive on lang string in 1043 failing policheck-->
    <Pattern>RibbonDiff.xml</Pattern>
  </ExcludedFilePatterns>
  <ExcludedFolders>
    <!-- add folders to bypass in policheck -->
    <Folder>build</Folder>
    <Folder>exports</Folder>
    <Folder>Localization</Folder>
    <Folder>Tests</Folder>
    <Folder>tools</Folder>
    <Folder>frontend\pcf-common\internals</Folder>
    <Folder>src\build\Tools</Folder>
    <Folder>.azuredevops</Folder>
    <Folder>Localize</Folder>
  </ExcludedFolders>
</PoliCheck>